<p id="notice"><%= notice %></p>

<%=form_tag(search_offices_url, method: "get") do %>
  <%= label_tag(:query, "Search for:") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Search") %>
<% end %>

<h1>Offices</h1>

<table>
  <thead>
    <tr>
      <th>Building name</th>
      <th>Floor number</th>
      <th>Room number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offices.each do |office| %>
      <tr>
        <td><%= office.building_name %></td>
        <td style="text-align:center"><%= office.floor_number %></td>
        <td style="text-align:center"><%= office.room_number %></td>
        <td colspan="3"></td>
        <td><%= link_to 'Show', office %></td>
        <td><%= link_to 'Edit', edit_office_path(office) %></td>
        <td><%= link_to 'Destroy', office, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

